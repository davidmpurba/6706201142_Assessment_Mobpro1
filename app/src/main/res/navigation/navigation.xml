<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">

    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if1142.temperature_converter.ui.hitung.HitungFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_hitung" >
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_aboutMeFragment"
            app:destination="@id/aboutMeFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if1142.temperature_converter.ui.optionmenu.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/historyFragment"
        android:name="org.d3if1142.temperature_converter.ui.history.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history"/>
    <fragment
        android:id="@+id/aboutMeFragment"
        android:name="org.d3if1142.temperature_converter.ui.optionmenu.AboutmeFragment"
        android:label="AboutMeFragment"
        tools:layout="@layout/fragment_aboutme"/>
</navigation>